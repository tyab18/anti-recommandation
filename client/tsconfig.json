{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/@types/*"],
      "@/*": ["src/vue/*"],
      "#api/*": ["api/generated/*"]
    },
    "lib": [
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
